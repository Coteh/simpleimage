<% if (responseType === "html") { %>
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>
        Register - simpleimage
    </title>
    <link rel="stylesheet" href="/assets/css/style.css">
    <link rel="stylesheet" href="/assets/css/form-style.css">
    <script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
        crossorigin="anonymous"></script>
</head>

<body>
<% } %>
    <div id="contents">
        <div id="register-container">
            <div class="register-view">
                <h2>Register</h2>
                <form action="/register?type=<%= responseType %>" method="POST" id="register-form" class="input-form">
                    <table>
                        <tr>
                            <td><span>Username:</span></td>
                            <td><input type="text" name="username"></input></td>
                        </tr>
                        <tr>
                            <td><span>Password:</span></td>
                            <td><input type="password" name="password"></input></td>
                        </tr>
                        <tr>
                            <td><span>Confirm Password:</span></td>
                            <td><input type="password" name="passwordConfirm"></input></td>
                        </tr>
                        <tr>
                            <td><span>Email:</span></td>
                            <td><input type="text" name="email"></input></td>
                        </tr>
                    </table>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>"></input>
                    <span tabindex=0 class="button submit-button">Submit</span>
                </form>
            </div>
        </div>
    </div>
<% if (responseType === "html") { %>
</body>

</html>
<% } %>