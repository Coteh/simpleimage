<% if (responseType === "html") { %>
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>
        Login - simpleimage
    </title>
    <link rel="stylesheet" href="/assets/css/style.css">
    <link rel="stylesheet" href="/assets/css/form-style.css">
    <script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
        crossorigin="anonymous"></script>
</head>

<body>
<% } %>
    <div id="contents">
        <div id="login-container">
            <div class="login-view">
                <h2>Login</h2>
                <form action="/login?type=<%= responseType %>" method="POST" id="login-form" class="input-form">
                    <table>
                        <tr>
                            <td>
                                <span>Username</span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <input type="text" name="username"></input>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <span>Password</span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <input type="password" name="password"></input>
                            </td>
                        </tr>
                    </table>
                    <input type="hidden" name="redirectUrl" value="<%= fromUrl %>"></input>
                    <span class="button submit-button">Submit</span>
                    <input type="submit" style="display: none"/>
                </form>
                <div id="register-from-login">
                    Don't have an account?
                    <span id="register-via-login-button" class="button">Register Now</span>
                </div>
            </div>
        </div>
    </div>
<% if (responseType === "html") { %>
</body>

</html>
<% } %>